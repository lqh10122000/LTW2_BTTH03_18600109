<style>

    .events
    {
        width: 100%;
        height: 400px;
        margin-top: 100px;
        display: block;
    }

    .event{
        margin-top: 10px;
    }
</style>
<body>
    <div class="container">
        <h1 style="text-align: center;"class="display-1">Hội Nghị</h1>
        <div class="events">

            <table>
                <tr>
                    <th>Tên Hội Nghị</th>
                    <th>Mô Tả Ngắn</th>
                    <th>Mô Tả Đầy Đủ</th>
                    <th>Thời Gian</th>
                </tr>

                
                <% for(let i = 0; i < allEvents.length - 1; i++) { %>
                    <tr>
                        <td><%= allEvents[0][i].nameEvent %></td>
                        <td><%= allEvents[0][i].shortDescription %></td>
                        <td><%= allEvents[0][i].longDescription %></td>
                        <td><%= allEvents[0][i].Time %></td>
                    </tr>
    
                <% } %>
            </table>

        </div>
    </br>
</br>
</br>
</br>

        <% if(!currentUser) {%>
            <a href ="./"><button type="button" class="btn btn-primary btn-lg btn-block">Home</button></a>

        
            <a href="./reg"><button type="button" class="btn btn-secondary btn-lg btn-block">Register</button></a>

        <%} else {%>

            <a href ="./"><button type="button" class="btn btn-primary btn-lg btn-block">Home</button></a>

        <%}%>
    </div>
